<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Intelimed"
        tools:targetApi="31">

        <!-- âœ… Tela inicial do app -->
        <activity
            android:name=".AuthChoiceActivity"
            android:exported="true"
            android:label="Tela Inicial"
            android:theme="@style/Theme.Intelimed">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Tela principal -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Intelimed" />

        <!-- Tela de Cadastro -->
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:label="Tela de Cadastro"
            android:theme="@style/Theme.Intelimed"/>
        <activity
            android:name=".TermsOfUseActivity"
            android:exported="false"
            android:label="Termos e Privacidade"
            android:theme="@style/Theme.Intelimed"/>

        <!-- Tela completa de termos -->
        <activity
            android:name=".TermsFullActivity"
            android:exported="false"
            android:label="Termos e Privacidade"
            android:theme="@style/Theme.Intelimed" />

        <activity
            android:name=".SignInActivity"
            android:exported="false"
            android:label="Tela de Login"
            android:theme="@style/Theme.Intelimed"/>

        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false"
            android:label="Tela para recuperar senha"
            android:theme="@style/Theme.Intelimed"/>

        <activity
            android:name=".OnBoardingActivity"
            android:exported="false"
            android:label="Tela de Primeiros Passos"
            android:theme="@style/Theme.Intelimed" />

    </application>

</manifest>
