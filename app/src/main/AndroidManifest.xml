<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Intelimed"
        tools:targetApi="31">

        <!-- ✅ Tela inicial -->
        <activity
            android:name=".AuthChoiceActivity"
            android:exported="true"
            android:label="Tela Inicial"
            android:theme="@style/Theme.Intelimed">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Tela principal -->
        <activity
            android:name=".MainPatientActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Intelimed" />

        <activity
            android:name=".MainDoctorActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.Intelimed" />

        <!-- Cadastro de médico -->
        <activity
            android:name=".SignUpDoctorActivity"
            android:exported="false"
            android:label="Cadastro de Médico"
            android:theme="@style/Theme.Intelimed" />

        <!-- Login -->
        <activity
            android:name=".SignInActivity"
            android:exported="false"
            android:label="Tela de Login"
            android:theme="@style/Theme.Intelimed" />

        <!-- Recuperação de senha -->
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false"
            android:label="Recuperar Senha"
            android:theme="@style/Theme.Intelimed" />

        <!-- OnBoarding -->
        <activity
            android:name=".OnBoardingActivity"
            android:exported="false"
            android:label="Boas-vindas"
            android:theme="@style/Theme.Intelimed" />

        <!-- Encaminhamento -->
        <activity
            android:name=".GenerateForwardingActivity"
            android:exported="false"
            android:label="Gerar Encaminhamento"
            android:theme="@style/Theme.Intelimed" />

        <!-- Orientações médicas -->
        <activity
            android:name=".MedicalGuidanceActivity"
            android:exported="false"
            android:label="Orientações Médicas"
            android:theme="@style/Theme.Intelimed" />

        <!-- Registro de sintomas -->
        <activity
            android:name=".SymptomLogActivity"
            android:exported="false"
            android:label="Registro de Sintomas"
            android:theme="@style/Theme.Intelimed" />

        <!-- Termos de uso resumido -->
        <activity
            android:name=".TermsOfUseActivity"
            android:exported="false"
            android:label="Termos e Privacidade"
            android:theme="@style/Theme.Intelimed" />

        <!-- Termos de uso completo -->
        <activity
            android:name=".TermsFullActivity"
            android:exported="false"
            android:label="Termos Completos"
            android:theme="@style/Theme.Intelimed" />

        <!-- Cadastro de paciente (versão dedicada, se existir) -->
        <activity
            android:name=".SignUpPatientActivity"
            android:exported="false"
            android:label="Cadastro de Paciente"
            android:theme="@style/Theme.Intelimed" />

        <activity
            android:name=".PatientListActivity"
            android:exported="false"
            android:label="Cadastro de Paciente"
            android:theme="@style/Theme.Intelimed" />

    </application>

</manifest>
